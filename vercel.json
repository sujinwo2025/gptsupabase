{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "env": {
    "NODE_ENV": "production",
    "PORT": {
      "description": "Port to run the server on (Vercel uses 3000)",
      "default": "3000"
    }
  },
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js",
      "methods": ["GET", "HEAD", "OPTIONS", "POST", "PUT", "DELETE", "PATCH"]
    }
  ],
  "github": {
    "enabled": true,
    "autoJobCancelOnPush": true
  },
  "framework": "nodejs",
  "outputDirectory": "dist",
  "productionBuildEnvironment": {
    "NODE_ENV": "production"
  }
}
